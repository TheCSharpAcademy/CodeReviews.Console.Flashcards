<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:dotnetMAUI.Flashcards.ViewModels"
             x:Class="dotnetMAUI.Flashcards.MainPage"
             x:DataType="viewmodels:MainViewModel">
    <ContentPage.BindingContext>
        <viewmodels:MainViewModel/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Spacing="15"
            Padding="10">
            
            <Label Text="Welcome!"
                   FontSize="32"
                   HorizontalOptions="Center"/>
            
            <Grid RowDefinitions="*,*"
                  ColumnDefinitions="*,*"
                  RowSpacing="15">

                <Button Grid.Row="0"
                        Grid.ColumnSpan="2"
                        HeightRequest="75"
                        Text="Study"
                        FontSize="32"
                        Command="{Binding GoToStudyCommand}"/>

                <Button Grid.Row="1"
                        Grid.Column="0"
                        Text="Manage Stacks and Flashcards"
                        Command="{Binding GoToManageStacksCommand}"/>
                
                <Button Grid.Row="1"
                        Grid.Column="1"
                        Text="View Previous Study Sessions"
                        Command="{Binding GoToPreviousStudySessionsCommand}"/>

            </Grid>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
